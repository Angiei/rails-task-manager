<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <h1 class="card-title text-primary"><%= @task.title %></h1>
    <div class="card-body">
      <p class="card-text text-muted"><%= @task.details %></p>

      <% if @task.completed %>
        <p class="text-success">✅ This task is completed</p>
      <% else %>
        <p class="text-warning">❌ This task is not completed</p>
      <% end %>

      <!-- Actions -->
      <div class="d-flex gap-2 mt-3">
        <%= link_to "✏️ Edit this task", edit_task_path(@task), class: "btn btn-outline-primary" %>
        <%= link_to "Delete", task_path(@task), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %>
      </div>
    </div>
  </div>

  <!-- Retour à la liste -->
  <div class="mt-3">
    <%= link_to "🔙 Retour à la liste des tâches", tasks_path, class: "btn btn-link text-decoration-none" %>
  </div>
</div>
