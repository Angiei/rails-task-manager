<div class="container mt-5">
  <h1 class="mb-4">Modifier la tâche</h1>

  <div class="card shadow-sm p-4">
    <%= form_with(model: @task, url: task_path(@task), local: true, class: "form") do |form| %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label fw-bold" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :details, class: "form-label fw-bold" %>
        <%= form.text_area :details, class: "form-control", rows: 3 %>
      </div>

      <div class="form-check mb-3">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, "Completed", class: "form-check-label" %>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Mettre à jour", class: "btn btn-primary" %>
        <%= link_to "Retour à la liste des tâches", tasks_path, class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>
