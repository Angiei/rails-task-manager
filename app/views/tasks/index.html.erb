<div class="container mt-5">
  <h1 class="text-primary text-center">📋 Liste des tâches</h1>

  <div class="card shadow-sm p-3 mt-4">
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <%= link_to task.title, task_path(task), class: "fw-bold text-decoration-none text-dark" %>
            <span class="text-muted">- <%= task.details %></span>
          </div>

          <div class="d-flex gap-2 align-items-center">
            <% if task.completed %>
              <span class="badge bg-success">Terminée</span>
            <% else %>
              <span class="badge bg-warning">Non terminée</span>
            <% end %>

            <%= link_to "🗑️", task_path(task), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cette tâche ?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Bouton pour ajouter une nouvelle tâche -->
  <div class="text-center mt-4">
    <%= link_to "➕ Ajouter une nouvelle tâche", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
